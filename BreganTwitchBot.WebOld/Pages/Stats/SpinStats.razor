        </MudItem>
        <MudItem xs=2>
            <MudPaper Style="background-color: #27272f; color: white;" Elevation=5>
                <MudText Align="Align.Center" Class="pt-4" Typo="Typo.h6">&#129362; Cucumber Wins</MudText>
                <MudText Align="Align.Center" Class="pt-1 pb-4" Typo="Typo.body1">@gamblingStats.CucumberWins.ToString("N0")</MudText>
