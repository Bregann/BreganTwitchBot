                <MudText Align="Align.Center" Class="pt-4" Typo="Typo.h6">&#127815; Grapes Wins</MudText>
                <MudText Align="Align.Center" Class="pt-1 pb-4" Typo="Typo.body1">@gamblingStats.GrapesWins.ToString("N0")</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs=2>
