                <MudText Align="Align.Center" Class="pt-4" Typo="Typo.h6">SMOrc Wins</MudText>
                <MudText Align="Align.Center" Class="pt-1 pb-4" Typo="Typo.body1">@gamblingStats.SmorcWins.ToString("N0")</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudText Typo="Typo.h2" Align="Align.Center" Class="pt-7 pb-5" Style="color: white;">Discord Spin Stats</MudText>
    <MudGrid Justify="Justify.Center">
        <MudItem xs=12>
            <MudPaper Style="background-color: #27272f; color: white;" Elevation=5>
                <MudText Align="Align.Center" Class="pt-4" Typo="Typo.h6">Total Spins</MudText>
                <MudText Align="Align.Center" Class="pt-1 pb-4" Typo="Typo.body1">@gamblingStats.DiscordTotalSpins.ToString("N0")</MudText>
