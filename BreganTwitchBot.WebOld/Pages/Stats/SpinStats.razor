        <MudItem xs=2>
            <MudPaper Style="background-color: #27272f; color: white;" Elevation=5>
                <MudText Align="Align.Center" Class="pt-4" Typo="Typo.h6">&#127814; Eggplant Wins</MudText>
                <MudText Align="Align.Center" Class="pt-1 pb-4" Typo="Typo.body1">@gamblingStats.EggplantWins.ToString("N0")</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs=2>
            <MudPaper Style="background-color: #27272f; color: white;" Elevation=5>
                <MudText Align="Align.Center" Class="pt-4" Typo="Typo.h6">&#x1f9c0; Cheese Wins</MudText>
                <MudText Align="Align.Center" Class="pt-1 pb-4" Typo="Typo.body1">@gamblingStats.CheeseWins.ToString("N0")</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private GamblingStats gamblingStats;

    protected override async Task OnInitializedAsync()
    {
        gamblingStats = GamblingStatsService.GetSlotMachineStatInfo();
    }
}
